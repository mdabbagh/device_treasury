<h1>Devices</h1>
<% if current_user.admin? %>
  <div>
    <%= button_to "Add Device", new_device_path, method: :get, class: "btn btn-primary" %>
  </div>
<% end %>

<div class="pagination">
  <%= will_paginate %>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Tag</th>
      <th scope="col">Category</th>
      <th scope="col">Make</th>
      <th scope="col">Model</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @devices %>
  </tbody>
</table>

<div class="pagination">
  <%= will_paginate %>
</div>
