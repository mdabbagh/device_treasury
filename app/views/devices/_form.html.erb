<%= form_for(@device, url: yield(:url_link)) do |f| %>
  <div class="form-group">
    <%= f.label :tag %>
    <%= f.text_field :tag, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :make %>
    <%= f.text_field :make, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :model %>
    <%= f.text_field :model, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :memory, 'Memory (in GB)' %>
    <%= f.text_field :memory, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :os, 'OS' %>
    <%= f.text_field :os, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :features, 'Features (Optional)' %>
    <%= f.text_field :features, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :passcode, 'Passcode (Optional)' %>
    <%= f.text_field :passcode, class: 'form-control' %>
  </div>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>